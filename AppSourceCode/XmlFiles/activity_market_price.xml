<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_market_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Prices"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/line_chart_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Line Chart"
            android:src="@drawable/line_chart_placeholder"/>

        <ImageView
            android:id="@+id/pie_chart_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Pie Chart"
            android:src="@drawable/pie_chart_placeholder"/>

        <TextView
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:background="@drawable/backg"
            android:gravity="left"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:text="INDIAN BASE PRICE : "
            android:textColor="#FFFFFFFF"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:background="@drawable/backg"
            android:gravity="left"
            android:padding="15dp"
            android:layout_margin="10dp"
            android:text="YOUR SELLING PRICE : "
            android:textColor="#FFFFFFFF"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />



        <Button
            android:id="@+id/btn_save_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save as PDF"
            android:layout_marginTop="10dp"
            android:layout_gravity="center" />

    </LinearLayout>


</ScrollView>
