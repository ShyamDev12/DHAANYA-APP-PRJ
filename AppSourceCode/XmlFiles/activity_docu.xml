<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Docu"
    android:orientation="vertical"
    android:background="@drawable/homey"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educational \nResource"
        android:textSize="35dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.03"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rmtc"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indian Farmer's\nPortal!"
            android:textSize="26dp"
            android:textColor="#305F72"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.035" />

        <Button
            android:id="@+id/openbtn"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/card_buttton_bg"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="Open"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/button_arrow"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Farmer Schemes"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="#305F72"
        android:letterSpacing="0.02"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="13dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/c1"
                android:layout_width="360dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="#FAE4F4"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/sketck_icon"/>

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM-KISAN\nScheme"
                        android:layout_toRightOf="@id/i1"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="25dp"/>



                    <TextView
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:layout_toRightOf="@id/t1"
                        android:paddingLeft="50dp"
                        android:paddingTop="25dp"/>

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/play_button"
                        android:layout_toRightOf="@id/p1"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c2"
                android:layout_below="@id/c1"
                android:layout_width="360dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="#FFF5E5"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/sketck_icon"/>

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PM-KMY\nScheme"
                        android:layout_toRightOf="@id/i2"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="25dp"/>



                    <TextView
                        android:id="@+id/p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="    "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:layout_toRightOf="@id/t2"
                        android:paddingLeft="50dp"
                        android:paddingTop="25dp"/>

                    <ImageView
                        android:id="@+id/im2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/play_button"
                        android:layout_toRightOf="@id/p2"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/c3"
                android:layout_below="@id/c2"
                android:layout_width="360dp"
                android:layout_height="120dp"
                app:cardBackgroundColor="#FFF5E5"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/sketck_icon"/>

                    <TextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PMFBY\nScheme"
                        android:layout_toRightOf="@id/i3"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="25dp"/>



                    <TextView
                        android:id="@+id/p3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="     "
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:textColor="#305F72"
                        android:layout_toRightOf="@id/t3"
                        android:paddingLeft="50dp"
                        android:paddingTop="25dp"/>

                    <ImageView
                        android:id="@+id/im3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/play_button"
                        android:layout_toRightOf="@id/p3"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
